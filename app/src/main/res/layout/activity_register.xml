<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/wave"
            android:layout_below="@+id/topView"
            />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/covidlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="N'oubliez pas de porter un masque"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/msg"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Créer un compte"
            android:textStyle="bold"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/ic_baseline_accessibility_24"
            android:background="@drawable/round_border"
            android:ems="30"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="username"
            android:textSize="10sp" />
        <!-- android:drawableLeft="@drawable/loginicon_foreground"-->

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:background="@drawable/round_border"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="30"
            android:hint="password"
            android:padding="16dp"
            android:inputType="textPassword"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="email"
            android:drawableStart="@drawable/ic_email"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:background="@drawable/round_border"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:textSize="10sp"
            android:inputType="textEmailAddress" />




        <!--  android:drawableLeft="@drawable/passwordicon_foreground"-->
        <EditText
            android:id="@+id/phone"
            android:background="@drawable/round_border"
            android:layout_below="@+id/email"
            android:layout_marginTop="50dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_phone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:padding="16dp"
            android:hint="phoneNumber"
            android:textSize="10sp"
            android:inputType="phone" />
        <ImageView
            android:id="@+id/imgtest"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/chooseimg"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />
<Button
    android:id="@+id/buttonimg"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:background="@drawable/round_bg"
    android:layout_below="@+id/imgtest"
    android:text="Choisir une image"
    android:textColor="@android:color/white"
    android:textAllCaps="false"
    android:textSize="20sp"
    android:layout_centerHorizontal="true"/>



        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_marginTop="40dp"

            android:layout_height="wrap_content"
            android:layout_below="@id/buttonimg"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:text="Créer votre compte" />
    </RelativeLayout>

</ScrollView>
