<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/wave"
            android:layout_below="@+id/topView"
            />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"

            app:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/covidlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="N'oubliez pas de porter un masque"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/msg"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Votre profil"
            android:textStyle="bold"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/user1" />

        <TextView
            android:id="@+id/username"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_baseline_accessibility_24"
            android:ems="40"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_email"
            android:background="@drawable/round_border"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:ems="30"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/numtel"
            android:layout_marginTop="40dp"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/email"
            android:drawableStart="@drawable/ic_phone"
            android:background="@drawable/round_border"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:ems="20"
            android:textSize="20sp"/>



        <Button

            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/numtel"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:text="Logout" />


    </RelativeLayout>

</ScrollView>
